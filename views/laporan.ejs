<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>
  <body>
    <div class="container">
      <header>
        <h1><i class="fas fa-chart-bar"></i> Laporan Absensi</h1>
        <p class="subtitle">Rekapan lengkap data kehadiran karyawan</p>
      </header>

      <!-- User Info -->
      <% if (user && user.role === 'admin') { %>
      <div class="user-info">
        <div class="user-details">
          <i class="fas fa-user-circle"></i>
          <strong><%= user.username %></strong>
          <span class="role-admin">HRD</span>
        </div>
        <a href="/logout" class="logout-btn">
          <i class="fas fa-sign-out-alt"></i> Logout
        </a>
      </div>
      <% } %>

      <div class="table-container">
        <% if (data.length === 0) { %>
        <div class="empty-state">
          <i class="fas fa-database"></i>
          <h3>Belum ada data absensi</h3>
          <p>Tidak ada data yang dapat ditampilkan.</p>
        </div>
        <% } else { %>
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Nama</th>
              <th>Tanggal</th>
              <th>Jam Masuk</th>
              <th>Jam Keluar</th>
              <th>Status</th>
              <th>Keterangan</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach(item => { %>
            <tr>
              <td><%= item.id %></td>
              <td><strong><%= item.nama %></strong></td>
              <td>
                <% const tgl = new Date(item.tanggal); const formatted =
                tgl.toLocaleDateString('id-ID'); %> <%= formatted %>
              </td>
              <td><%= item.jam_masuk %></td>
              <td><%= item.jam_keluar || '-' %></td>
              <td>
                <% if (item.status === 'hadir') { %>
                <span class="status-hadir">Hadir</span>
                <% } else if (item.status === 'izin') { %>
                <span class="status-izin">Izin</span>
                <% } else if (item.status === 'sakit') { %>
                <span class="status-sakit">Sakit</span>
                <% } else { %>
                <span><%= item.status %></span>
                <% } %>
              </td>
              <td><%= item.keterangan || '-' %></td>
              <td>
                <a
                  href="/delete/<%= item.id %>"
                  class="btn-action btn-delete"
                  onclick="return confirm('Hapus data ini?')"
                >
                  <i class="fas fa-trash"></i> Hapus
                </a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } %>
      </div>

      <div class="action-buttons">
        <a href="/" class="btn btn-back">
          <i class="fas fa-arrow-left"></i> Kembali ke Beranda
        </a>
      </div>
    </div>
  </body>
</html>
